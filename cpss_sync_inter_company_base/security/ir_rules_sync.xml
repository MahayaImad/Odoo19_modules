<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Règle pour permettre l'accès aux journaux dans le contexte de sync -->
        <record id="account_journal_sync_admin_rule" model="ir.rule">
            <field name="name">Journal: Sync Admin Multi-Company Access</field>
            <field name="model_id" ref="account.model_account_journal"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sync_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

