<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Groupes de sécurité -->

        <record id="group_sync_user" model="res.groups">
            <field name="name">Sync User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_sync_proposer" model="res.groups">
            <field name="name">Sync Proposer</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('group_sync_user'))]"/>
        </record>

        <record id="group_sync_executor" model="res.groups">
            <field name="name">Sync Executor</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('group_sync_proposer'))]"/>
        </record>

        <record id="group_sync_manager" model="res.groups">
            <field name="name">Sync Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('group_sync_executor'))]"/>
        </record>

        <record id="group_sync_admin" model="res.groups">
            <field name="name">Sync Admin</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('group_sync_manager'))]"/>
        </record>

    </data>
</odoo>