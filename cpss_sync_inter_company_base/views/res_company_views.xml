<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Extend Company Form View to add Navbar Color Settings -->
        <record id="view_company_form_navbar_color" model="ir.ui.view">
            <field name="name">res.company.form.navbar.color</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <!-- Add Navbar Color section after General Information -->
                <xpath expr="//sheet" position="inside">
                    <group string="Navbar Customization" name="navbar_customization">
                        <field name="is_fiscal_company" invisible="1"/>
                        <group>
                            <button name="action_configure_navbar_colors"
                                    string="Auto-Configure Colors"
                                    type="object"
                                    class="btn-primary"
                                    help="Automatically configure navbar colors based on company type (operational/fiscal)"/>
                        </group>
                        <group>
                            <field name="use_navbar_color"
                                   widget="boolean_toggle"
                                   help="Enable custom navbar color to visually distinguish this company"/>
                        </group>
                        <group>
                            <field name="navbar_color"
                                   widget="color"
                                   invisible="not use_navbar_color"
                                   help="Custom background color for the top navbar (hex code)"/>
                            <field name="navbar_text_color"
                                   widget="color"
                                   invisible="not use_navbar_color"
                                   help="Text color for the navbar (usually white or dark)"/>
                        </group>

                        <!-- Info for Operational Company -->
                        <div class="alert alert-success" role="alert"
                             invisible="use_navbar_color or is_fiscal_company">
                            <p>
                                <strong>✅ Operational Company - Default Navbar</strong><br/>
                                This company uses the default Odoo navbar color (dark gray).
                                Users will work here normally without visual warnings.
                            </p>
                        </div>

                        <!-- Info for Service Comptabilité -->
                        <div class="alert alert-warning" role="alert"
                             invisible="not use_navbar_color or not is_fiscal_company">
                            <p>
                                <strong>⚠️ Service Comptabilité - Distinctive Navbar</strong><br/>
                                This company uses a distinctive navbar color (orange) to alert users
                                they are working in the accounting service context.
                            </p>
                        </div>

                        <!-- General Info when custom color enabled -->
                        <div class="alert alert-info" role="alert"
                             invisible="not use_navbar_color or is_fiscal_company">
                            <p>
                                <strong>Navbar Color Customization:</strong>
                                The navbar color will change automatically when you switch to this company,
                                helping you visually identify which company you're working in.
                            </p>
                            <ul>
                                <li><strong>Operational Company:</strong> Keep default (disabled) or use subtle color</li>
                                <li><strong>Service Comptabilité:</strong> Use distinctive color (orange/red) as warning</li>
                            </ul>
                        </div>
                    </group>
                </xpath>

            </field>
        </record>

        <!-- Add Settings menu entry for easy access -->
        <record id="action_company_navbar_settings" model="ir.actions.act_window">
            <field name="name">Company Navbar Colors</field>
            <field name="res_model">res.company</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_navbar_customized': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure navbar colors for your companies
                </p>
                <p>
                    Set custom navbar colors to easily distinguish between companies.
                    This is particularly useful for multi-company setups where you need
                    to visually identify the active company.
                </p>
            </field>
        </record>

    </data>
</odoo>
