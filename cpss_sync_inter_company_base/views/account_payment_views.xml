<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue formulaire avec champ partage -->
        <record id="view_account_payment_form_sync" model="ir.ui.view">
            <field name="name">account.payment.form.sync</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">

                <!-- Ajouter les champs dans le header -->
                <xpath expr="//header" position="inside">
                    <field name="is_operational_company" invisible="1"/>
                    <field name="reconciled_invoice_ids" invisible="1"/>

                    <!-- Bouton Partager Paiement -->
                    <button name="action_partager_paiement"
                            type="object"
                            string="Partager avec Service Comptabilité"
                            class="btn-primary"
                            invisible="state != 'posted' or partage in ['shared', 'error'] or not is_operational_company or not reconciled_invoice_ids"
                            groups="cpss_sync_inter_company_base.group_sync_executor"/>

                    <button name="action_retry_partage"
                            type="object"
                            string="Réessayer le Partage"
                            class="btn-warning"
                            invisible="partage != 'error' or not is_operational_company"
                            groups="cpss_sync_inter_company_base.group_sync_executor"/>
                </xpath>

                <xpath expr="//field[@name='date']" position="after">
                    <field name="is_operational_company"
                           invisible="1" />

                    <field name="partage"
                           invisible="not is_operational_company"
                           readonly="1"
                           widget="badge"
                           decoration-info="partage == 'not_shared'"
                           decoration-warning="partage == 'proposed'"
                           decoration-success="partage == 'shared'"
                           decoration-danger="partage == 'refused'"/>
                </xpath>

                <!-- Ajouter les liens inter-sociétés -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="paiement_societe_fiscale_id"
                           invisible="not paiement_societe_fiscale_id or not is_operational_company"
                           readonly="1"/>
                    <field name="paiement_origine_operationnelle_id"
                           invisible="not paiement_origine_operationnelle_id or is_operational_company"
                           readonly="1"/>
                </xpath>

                <!-- Message d'erreur si échec -->
                <xpath expr="//sheet" position="inside">
                    <div class="alert alert-danger" role="alert"
                         invisible="partage != 'error'">
                        <strong>Erreur de partage :</strong>
                        <field name="partage_error_message" readonly="1"/>
                    </div>
                </xpath>

            </field>
        </record>

        <!-- Vue liste avec colonne partage -->
        <record id="view_account_payment_tree_sync" model="ir.ui.view">
            <field name="name">account.payment.tree.sync</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="before">
                    <field name="is_operational_company" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='state']" position="after">
                    <field name="partage"
                           optional="show"
                           widget="badge"
                           decoration-info="partage == 'not_shared'"
                           decoration-warning="partage == 'proposed'"
                           decoration-success="partage == 'shared'"
                           decoration-danger="partage in ['refused', 'error']"/>
                </xpath>

            </field>
        </record>

        <!-- Actions pour les différents états de paiements -->
        <record id="action_paiements_non_partages" model="ir.actions.act_window">
            <field name="name">Paiements Non Partagés</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('partage', '=', 'not_shared'), ('state', '=', 'posted')]</field>
        </record>

        <record id="action_paiements_partages" model="ir.actions.act_window">
            <field name="name">Paiements Partagés</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('partage', '=', 'shared')]</field>
        </record>

        <record id="action_paiements_erreur" model="ir.actions.act_window">
            <field name="name">Paiements en Erreur</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('partage', '=', 'error')]</field>
        </record>

    </data>
</odoo>