<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Vue Form de Wilaya avec Subdivisions et Da誰ras -->
        <record id="view_country_state_form_inherit_subdivision" model="ir.ui.view">
            <field name="name">res.country.state.form.inherit.subdivision</field>
            <field name="model">res.country.state</field>
            <field name="inherit_id" ref="eloapps_l10n_dz_regions.view_country_state_form_dz"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='communes']" position="after">
                    <page string="Subdivisions" name="subdivisions">
                        <field name="subdivision_ids">
                            <list>
                                <field name="code"/>
                                <field name="name"/>
                                <field name="daira_count"/>
                            </list>
                        </field>
                    </page>
                    <page string="Da誰ras" name="dairas">
                        <field name="daira_ids">
                            <list>
                                <field name="code"/>
                                <field name="name"/>
                                <field name="subdivision_id"/>
                                <field name="commune_count"/>
                            </list>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Vue Form de Commune avec Da誰ra -->
        <record id="view_country_commune_form_inherit_daira" model="ir.ui.view">
            <field name="name">res.country.state.commune.form.inherit.daira</field>
            <field name="model">res.country.state.commune</field>
            <field name="inherit_id" ref="eloapps_l10n_dz_regions.view_country_commune_form_dz"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state_id']" position="after">
                    <field name="daira_id" domain="[('state_id', '=', state_id)]"/>
                    <field name="subdivision_id"/>
                </xpath>
            </field>
        </record>

        <!-- Vue Tree de Commune avec Da誰ra -->
        <record id="view_country_commune_tree_inherit_daira" model="ir.ui.view">
            <field name="name">res.country.state.commune.tree.inherit.daira</field>
            <field name="model">res.country.state.commune</field>
            <field name="inherit_id" ref="eloapps_l10n_dz_regions.view_country_commune_tree_dz"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state_id']" position="after">
                    <field name="daira_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
