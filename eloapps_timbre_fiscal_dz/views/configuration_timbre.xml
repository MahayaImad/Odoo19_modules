<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="res_config_settings_config_timbre" model="ir.ui.view">
        <field name="name">res.config.settings.config.timbre</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
          <xpath expr="//block[@name='default_taxes_setting_container']" position="after">
              <block title="Configuration de timbre" name="configuration_timbre">

                    <!-- Tranche -->
                    <setting>
                        <label for="tranche"/>
                        <div class="text-muted"></div>
                        <field name="tranche"/>
                    </setting>

                    <!-- Pourcentage -->
                    <setting>
                        <label for="prix"/>
                        <div class="text-muted"></div>
                        <field name="prix"/>
                    </setting>

                    <!-- Compte contrepartie vente -->
                    <setting>
                        <label for="sale_timbre"/>
                        <div class="text-muted"></div>
                        <field name="sale_timbre"/>
                    </setting>

                    <!-- Montant minimal -->
                    <setting>
                        <label for="mnt_min"/>
                        <div class="text-muted"></div>
                        <field name="mnt_min"/>
                    </setting>

                    <!-- Montant maximal -->
                    <setting>
                        <label for="mnt_max"/>
                        <div class="text-muted"></div>
                        <field name="mnt_max"/>
                    </setting>

                    <!-- Montant en lettre -->
                    <setting>
                        <field name="montant_en_lettre"/>
                        <label for="montant_en_lettre"/>
                        <div class="text-muted">
                            Afficher le montant en lettre sur lâ€™impression des factures.
                        </div>
                    </setting>

                    <!-- Se baser sur -->
                    <setting>
                        <label for="based_on"/>
                        <div class="text-muted"></div>
                        <field name="based_on"/>
                    </setting>

                </block>

          </xpath>

     

        </field>
      </record>

</odoo>