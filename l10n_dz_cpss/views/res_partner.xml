<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_form_l10n_dz_enhanced" model="ir.ui.view">
        <field name="name">res.partner.form.l10n.dz.enhanced</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='accounting_disabled']" position="inside">

                <group string="Information fiscale" invisible="company_type not in ['company']" groups="account.group_account_invoice">
                    <field name="fiscal_position" options="{'no_edit' : True, 'no_create': True}" groups="account.group_account_invoice"/>
                    <field name="activity_code" widget="many2many_tags"/>
                    <field name="rc" class="oe_line" groups="account.group_account_invoice"/>
                    <field name="nif" class="oe_line" groups="account.group_account_invoice"/>
                    <field name="ai" class="oe_line" groups="account.group_account_invoice"/>
                    <field name="nis" class="oe_line" groups="account.group_account_invoice"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='phone']" position="after">
                <field name="fax" widget="phone" class="w-100" groups="account.group_account_invoice"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//div[@class='o_address_format']/field[@name='state_id']" position="attributes">
                <attribute name="placeholder">Wilaya</attribute>
            </xpath>
        </field>
    </record>

    <record id="account_view_partner_property_form_inherit" model="ir.ui.view">
        <field name="name">account.view.partner.property.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='fiscal_information']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>
</odoo>
