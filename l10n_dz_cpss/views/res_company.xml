<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_company_form_l10n_dz_enhanced" model="ir.ui.view">
        <field name="name">res.company.form.l10n.dz.enhanced</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_registry']" position="after">
                <field name="rc"/>
                <field name="nif"/>
                <field name="ai"/>
                <field name="nis"/>

            </xpath>
            <xpath expr="//field[@name='favicon']" position="after">
                <field name="forme_juridique"/>
                <field name="activity_code" widget="many2many_tags"/>
                <field name="capital_social" widget="monetary"/>
            </xpath>
            <xpath expr="//field[@name='phone']" position="after">
                <field name="fax" widget="phone"/>
            </xpath>

            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='company_registry']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='state_id']" position="attributes">
                <attribute name="placeholder">Wilaya</attribute>
            </xpath>


        </field>
    </record>
</odoo>
