<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings" model="ir.ui.view">
        <field name="name">res config settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='default_taxes_setting_container']" position="after">

                <block title="Secteur et code d'activité sur factures" name="secteur_container">

                    <!-- Secteur d'activité -->
                    <setting  id="secteur_activite_facture" string="Secteur d'activité" company_dependent="1">
                        <div class="content-group">
                            <div class="row">
                                <label string="Afficher le secteur d'activité sur les factures" for="industry_id_in_invoice" class="col-lg-9 o_light_label"/>
                                <field name="industry_id_in_invoice"/>
                            </div>
                        </div>
                    </setting>

                    <!-- Code d'activité -->
                    <setting  id="code_activite_facture" string="Code d'activité" company_dependent="1">
                        <div class="content-group">
                            <div class="row">
                                <label for="activity_code_in_invoice"/>
                                <field string="Afficher le code d'activité sur les factures" name="activity_code_in_invoice" class="col-lg-9 o_light_label"/>
                            </div>
                        </div>
                    </setting>

                </block>

            </xpath>

        </field>
    </record>

    <record id="res_config_settings_sale" model="ir.ui.view">
        <field name="name">res config settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='catalog_setting_container']" position="after">


                <block title="Secteur et code d'activité sur devis" name="secteur_container">

                    <!-- Secteur d'activité -->
                    <setting  id="secteur_activite" string="Secteur d'activité" company_dependent="1">
                        <div class="content-group">
                            <div class="row">
                                <label string="Afficher le secteur d'activité sur les devis" for="industry_id_in_quotation" class="col-lg-9 o_light_label"/>
                                <field name="industry_id_in_quotation"/>
                            </div>
                        </div>
                    </setting>

                    <!-- Code d'activité -->
                    <setting  id="code_activite" string="Code d'activité" company_dependent="1">
                        <div class="content-group">
                            <div class="row">
                                <label for="activity_code_in_quotation"/>
                                <field string="Afficher le code d'activité sur les devis" name="activity_code_in_quotation" class="col-lg-9 o_light_label"/>
                            </div>
                        </div>
                    </setting>

                </block>

            </xpath>

        </field>
    </record>

</odoo>

