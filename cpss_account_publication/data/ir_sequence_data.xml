        <!-- Facture fournisseur PUBLIÉE -->
        <record id="seq_in_invoice_published" model="ir.sequence">
            <field name="name">Facture Fournisseur Publiée</field>
            <field name="code">account.move.in_invoice.published</field>
            <field name="prefix">FF/%(year)s/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="use_date_range">True</field>
        </record>

        <!-- ========================================= -->
        <!-- AVOIRS FOURNISSEUR (in_refund) -->
        <!-- ========================================= -->

        <!-- Avoir fournisseur - Séquence standard -->
        <record id="seq_in_refund_standard" model="ir.sequence">
            <field name="name">Avoir Fournisseur</field>
            <field name="code">account.move.in_refund.standard</field>
