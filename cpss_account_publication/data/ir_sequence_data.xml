<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Séquence pour les factures publiées -->
        <record id="seq_account_move_publication" model="ir.sequence">
            <field name="name">Factures Publiées</field>
            <field name="code">account.move.publication</field>
            <field name="prefix">PUB/%(year)s/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="use_date_range">True</field>
        </record>

        <!-- Séquence alternative avec préfixe F (comme mentionné dans le cahier des charges) -->
        <record id="seq_account_move_publication_f" model="ir.sequence">
            <field name="name">Factures Publiées (F)</field>
            <field name="code">account.move.publication.f</field>
            <field name="prefix">F%(year)s/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="use_date_range">True</field>
        </record>
    </data>
</odoo>