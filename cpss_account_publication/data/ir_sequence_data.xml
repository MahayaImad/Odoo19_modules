<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ========================================= -->
        <!-- FACTURES CLIENT (out_invoice) -->
        <!-- ========================================= -->

        <!-- Facture client - Séquence standard (Bon de Livraison Client) -->
        <record id="seq_out_invoice_standard" model="ir.sequence">
            <field name="name">Bon de Livraison Client</field>
            <field name="code">account.move.out_invoice.standard</field>
            <field name="prefix">BLC/%(year)s/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="use_date_range">True</field>
        </record>

        <!-- Facture client PUBLIÉE -->
        <record id="seq_out_invoice_published" model="ir.sequence">
            <field name="name">Facture Client Publiée</field>
            <field name="code">account.move.out_invoice.published</field>
            <field name="prefix">FC/%(year)s/</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="use_date_range">True</field>
        </record>

