<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire des factures - Ajout des champs FNDIA -->
    <record id="view_move_form_inherit_fndia" model="ir.ui.view">
        <field name="name">account.move.form.fndia</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Ajouter le champ "Subventionné FNDIA" après le partenaire -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="fndia_subsidized"
                       invisible="move_type != 'out_invoice'"
                       readonly="publication_state != 'published'"
                       widget="boolean_toggle"/>
            </xpath>

            <!-- Les totaux FNDIA sont automatiquement affichés via _compute_tax_totals -->
            <!-- Le filtrage des lignes FNDIA est géré automatiquement par _compute_invoice_line_ids_visible (hérité de l10n_dz_on_timbre_fiscal) -->

            <!-- Ajouter la colonne montant FNDIA dans les lignes de facture (vue inline) -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_subtotal']" position="after">
                <field name="fndia_subsidy_amount"
                       string="Subvention FNDIA"
                       optional="hide"
                       widget="monetary"/>
            </xpath>
        </field>
    </record>

    <!-- Vue liste des factures - Ajout de la colonne FNDIA -->
    <record id="view_invoice_tree_inherit_fndia" model="ir.ui.view">
        <field name="name">account.move.tree.fndia</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total_in_currency_signed']" position="after">
                <field name="fndia_subsidized"
                       optional="hide"/>
                <field name="fndia_subsidy_total"
                       string="Subvention FNDIA"
                       optional="hide"/>
                <field name="fndia_amount_to_pay"
                       string="Montant à Payer"
                       optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Vue recherche - Ajout de filtres FNDIA -->
    <record id="view_account_invoice_filter_inherit_fndia" model="ir.ui.view">
        <field name="name">account.invoice.search.fndia</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <!-- Ajouter des filtres pour FNDIA -->
            <xpath expr="//filter[@name='late']" position="after">
                <separator/>
                <filter name="fndia_subsidized"
                        string="Subventionné FNDIA"
                        domain="[('fndia_subsidized', '=', True), ('move_type', '=', 'out_invoice')]"/>
                <filter name="fndia_not_subsidized"
                        string="Non subventionné"
                        domain="[('fndia_subsidized', '=', False), ('move_type', '=', 'out_invoice')]"/>
            </xpath>

            <!-- Ajouter un regroupement par statut FNDIA -->
            <xpath expr="//group" position="inside">
                <filter name="group_by_fndia"
                        string="Subvention FNDIA"
                        context="{'group_by': 'fndia_subsidized'}"/>
            </xpath>
        </field>
    </record>
</odoo>