<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_config_timbre" model="ir.ui.view">
        <field name="name">res.config.settings.config.timbre</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='configuration_timbre']/setting[3]" position="after">
                <setting>
                    <label for="purchase_offset_account"/>
                    <div class="text-muted"></div>
                    <field name="purchase_offset_account"/>
                </setting>
            
            </xpath>

        </field>
    </record>

</odoo>