<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Odoo 19 Note: chart_template_id field no longer exists in account.fiscal.position
         Fiscal positions are now directly created without chart template reference. -->

    <record id="fiscal_position_template_exo" model="account.fiscal.position">
        <field name="name">Exonération TVA A la vente : ANSEJ, ANDI, Export,...</field>
        <field name="country_id" ref="base.dz"/>
    </record>

    <record id="fiscal_position_template_import_export" model="account.fiscal.position">
        <field name="name">Fournisseurs étranger</field>
        <field name="country_id" ref="base.dz"/>
    </record>

    <record id="fp_tax_template_exo_vt_normale" model="account.fiscal.position.tax">
        <field name="position_id" ref="fiscal_position_template_exo" />
        <field name="tax_src_id" ref="tva_normale" />
        <field name="tax_dest_id" ref="tva_0" />
    </record>

    <record id="fp_tax_template_exo_vt_intermediaire" model="account.fiscal.position.tax">
        <field name="position_id" ref="fiscal_position_template_exo" />
        <field name="tax_src_id" ref="tva_intermediaire" />
        <field name="tax_dest_id" ref="tva_0" />
    </record>

    <record id="fp_tax_template_impexp_ha_normale" model="account.fiscal.position.tax">
        <field name="position_id" ref="fiscal_position_template_import_export" />
        <field name="tax_src_id" ref="tva_acq_normale" />
        <field name="tax_dest_id" ref="tva_import_0" />
    </record>

    <record id="fp_tax_template_impexp_ha_intermediaire" model="account.fiscal.position.tax">
        <field name="position_id" ref="fiscal_position_template_import_export" />
        <field name="tax_src_id" ref="tva_acq_intermediaire" />
        <field name="tax_dest_id" ref="tva_import_0" />
    </record>
</odoo>
